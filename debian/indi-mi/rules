#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/cmake.mk

DEB_SRCDIR=indi-mi
DEB_DH_SHLIBDEPS_ARGS=-u--ignore-missing-info

DEB_CMAKE_EXTRA_FLAGS += -DCMAKE_BUILD_TYPE=Debug

NO_CPUS=$(shell nproc)
ifeq ($(NO_CPUS),0)
NO_CPUS=1
endif

MAKEFLAGS += -j$(NO_CPUS)

